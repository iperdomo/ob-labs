<project name="snapshot" default="snapshot" basedir=".">
  <property environment="env" />
  <property name="base.config" location="config" />
  <property name="base.lib" location="lib" />
  <property file="${base.config}/Openbravo.properties" />
  <property name="fs" value="${file.separator}" />
  <property name="host" value="localhost" />
  <property name="port" value="5432" />
  <property name="bk.file" value="${basedir}${fs}temp${fs}openbravo.backup" />
  <target name="snapshot">
    <echo message="Creating instance snapshot..." />
    <echo message="Making temp folder..." />
    <echo message="basedir ${basedir}" />
    <mkdir dir="${basedir}${fs}temp" />
	<echo message="Creating a database backup..." />
	<exec executable="pg_dump" failonerror="true">
	  <env key="PGUSER" value="${bbdd.systemUser}" />
	  <env key="PGPASSWORD" value="${bbdd.systemPassword}" />
	  <arg value="-v" />
	  <arg value="-b" />
	  <arg value="-Fc" />
	  <arg value="-h${host}" />
	  <arg value="-p${port}" />
	  <arg value="-O" />
	  <arg value="-f${bk.file}" />
	  <arg value="${bbdd.sid}" />
	</exec>
	<echo message="Making a zip..." />
    <tstamp>
      <format property="filename" pattern="yyyy-MM-dd_HH-mm-ss"/>
    </tstamp>
	<zip destfile="${basedir}${fs}..${fs}${filename}.zip" 
	     basedir="${basedir}" />
  </target>
  <target name="check.backup">
	<echo message="Checking if openbravo.backup file exists in ${basedir}${fs}temp folder..." />
	<available file="${bk.file}" property="bk.exists" />
  </target>
  <target name="restore" depends="check.backup" if="bk.exists">
	<echo message="Deleting the database ..." />
    <sql driver="${bbdd.driver}" url="${bbdd.url}" userid="${bbdd.systemUser}" password="${bbdd.systemPassword}" onerror="abort" autocommit="true">
      <classpath>
        <fileset dir="${base.lib}">
          <include name="**/*.jar">
          </include>
        </fileset>
      </classpath>
      <transaction>
        DROP DATABASE ${bbdd.sid};
      </transaction>
    </sql>
    <echo message="Creating the database..." />
    <sql driver="${bbdd.driver}" url="${bbdd.url}" userid="${bbdd.systemUser}" password="${bbdd.systemPassword}" onerror="abort" autocommit="true">
      <classpath>
        <fileset dir="${base.lib}">
          <include name="**/*.jar">
          </include>
        </fileset>
      </classpath>
      <transaction>
        CREATE DATABASE ${bbdd.sid}
                  WITH ENCODING='UTF8'
                  OWNER=${bbdd.user}
                  TEMPLATE=template0;
      </transaction>
    </sql>
	<echo message="Restoring the backup file..." />
	<exec executable="pg_restore" failonerror="true">
	  <env key="PGUSER" value="${bbdd.systemUser}" />
	  <env key="PGPASSWORD" value="${bbdd.systemPassword}" />
	  <arg value="-v" />
	  <arg value="-h${host}" />
	  <arg value="-p${port}" />
	  <arg value="-d${bbdd.sid}" />
	  <arg value="-O" />
	  <arg value="${bk.file}" />
	</exec>
  </target>
</project>
